{
	"compilerOptions": {
		"baseUrl": "",
		"declaration": true,
		"lib": [
			"es2015",
			"dom"
		],
		"sourceMap": true,
		"mapRoot": "./",
		"module": "es2015",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"outDir": "./demo/dist",
		"rootDirs": ["./demo", "./src"],
		"target": "es5",
		"inlineSources": true,
		"types": [
			"node",
			"jasmine"
		],
		"typeRoots": [
			"./node_modules/@types",
			"./custom.d.ts"
		],
		"allowSyntheticDefaultImports": true
	},
	"include": [
		"./src/**/*",
		"./demo/**/*"
	],
	"exclude": [
		"./src/**/*.spec.ts",
		"./src/tests/",
		"./demo/dist"
	]
}
