{
  "name": "@carbon/charts-vue",
  "version": "0.10.4",
  "description": "Carbon charting components for Vue",
  "main": "index.js",
  "files": [
    "dist",
    "index.js",
    "CHANGELOG.md",
    "README.md"
  ],
  "scripts": {
    "build": "vue-cli-service build --target lib --name charts-vue ./src/index.js --no-clean",
    "lint": "vue-cli-service lint ./src/index.js",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook -o storybook-dist",
    "ci-check": "yarn format:diff",
    "format": "prettier --write \"**/*.{scss,css,js,md,vue}\"",
    "format:diff": "prettier --list-different \"**/*.{scss,css,js,md,vue}\""
  },
  "dependencies": {
    "@carbon/charts": "^0.10.4",
    "vue": "^2.6.6"
  },
  "devDependencies": {
    "@babel/core": "7.3.4",
    "@storybook/addon-actions": "4.0.7",
    "@storybook/addon-links": "4.0.7",
    "@storybook/addons": "4.0.7",
    "@storybook/vue": "4.0.7",
    "@vue/cli-plugin-babel": "3.4.0",
    "@vue/cli-plugin-eslint": "3.4.0",
    "@vue/cli-service": "3.4.0",
    "babel-eslint": "10.0.1",
    "babel-loader": "8.0.5",
    "babel-preset-vue": "2.0.2",
    "eslint": "5.8.0",
    "eslint-plugin-vue": "5.0.0",
    "lint-staged": "8.1.5",
    "prettier": "1.16.4",
    "vue-template-compiler": "2.5.21"
  },
  "lint-staged": {
    "*.{scss,css,js,md,vue}": [
      "yarn format",
      "git add"
    ]
  },
  "prettier": {
    "printWidth": 80,
    "singleQuote": true,
    "trailingComma": "es5"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "plugin:vue/essential",
      "eslint:recommended"
    ],
    "rules": {},
    "parserOptions": {
      "parser": "babel-eslint"
    }
  },
  "postcss": {
    "plugins": {
      "autoprefixer": {}
    }
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not ie <= 8"
  ]
}
