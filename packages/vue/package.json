{
	"name": "@carbon/charts-vue",
	"version": "1.27.0",
	"description": "Carbon Charts component library for Vue",
	"type": "module",
	"module": "./dist/index.mjs",
	"types": "./dist/index.d.ts",
	"styles": "./dist/styles.css",
	"exports": {
		"./styles.min.css": "./dist/styles.min.css",
		"./styles.css": "./dist/styles.css",
		".": {
			"style": "./dist/styles.css",
			"types": "./dist/index.d.ts",
			"import": "./dist/index.mjs"
		}
	},
	"files": [
		"dist",
		"CHANGELOG.md",
		"telemetry.yml"
	],
	"scripts": {
		"postinstall": "ibmtelemetry --config=telemetry.yml",
		"file:styles": "cp ../core/dist/styles.* dist",
		"build": "vite build && yarn file:styles",
		"build:test": "vue-tsc --noEmit && vite build --config vite.test.config.ts --emptyOutDir",
		"dev": "vite --port 3004",
		"test:dom": "playwright test",
		"test:dom:rebase": "playwright test --update-snapshots",
		"lint": "eslint",
		"format": "prettier . --write --ignore-path ../../.prettierignore"
	},
	"peerDependencies": {
		"vue": "^3.5.16"
	},
	"dependencies": {
		"@carbon/charts": "workspace:*",
		"@ibm/telemetry-js": "^1.10.2"
	},
	"devDependencies": {
		"@playwright/test": "^1.55.1",
		"@vitejs/plugin-vue": "^6.0.1",
		"eslint": "^9.36.0",
		"prettier": "^3.6.2",
		"typescript": "^5.9.2",
		"vite": "^7.1.7",
		"vite-plugin-dts": "^4.5.4",
		"vue": "^3.5.22",
		"vue-tsc": "^3.0.8"
	},
	"publishConfig": {
		"access": "public",
		"tag": "next"
	},
	"homepage": "https://github.com/carbon-design-system/carbon-charts#readme",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/carbon-design-system/carbon-charts.git",
		"directory": "packages/vue"
	},
	"license": "Apache-2.0",
	"author": "IBM",
	"keywords": [
		"charts",
		"graphs",
		"radar",
		"gauge",
		"donut",
		"pie",
		"sparkline",
		"tree",
		"treemap",
		"heatmap",
		"wordcloud",
		"histogram",
		"alluvial",
		"geo",
		"bar",
		"bullet",
		"scatter",
		"meter",
		"line",
		"vue",
		"vue3",
		"component",
		"carbon",
		"ibm",
		"svg",
		"data",
		"typescript"
	]
}
