{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    // Package-specific
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "jsx": "preserve",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "strict": true
  },
  "include": ["src"],
  "references": [{ "path": "./tsconfig.vite.json" }],
  "vueCompilerOptions": {
    "target": 2.7
  }
}
