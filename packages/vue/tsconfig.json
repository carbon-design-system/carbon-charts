{
	"$schema": "https://json.schemastore.org/tsconfig",
	"extends": "../../tsconfig.json",
	"compilerOptions": {
		// Package-specific
		"declaration": true,
		"allowImportingTsExtensions": true,
		"baseUrl": ".",
		"jsx": "preserve",
		"paths": {
			"@/*": ["src/*"]
		},
		"noEmit": true,
		"useDefineForClassFields": true
	},
	"include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx", "src/**/*.vue"],
	"references": [{ "path": "./tsconfig.vite.json" }]
}
