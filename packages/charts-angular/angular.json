{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "version": 1,
  "newProjectRoot": "projects",
  "projects": {
    "charts-angular": {
      "projectType": "library",
      "root": "projects/charts-angular",
      "sourceRoot": "projects/charts-angular/src",
      "prefix": "sc",
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-angular:ng-packagr",
          "options": {
            "project": "projects/charts-angular/ng-package.json"
          },
          "configurations": {
            "production": {
              "tsConfig": "projects/charts-angular/tsconfig.lib.prod.json"
            },
            "development": {
              "tsConfig": "projects/charts-angular/tsconfig.lib.json"
            }
          },
          "defaultConfiguration": "production"
        },
        "test": {
          "builder": "@angular-devkit/build-angular:karma",
          "options": {
            "main": "projects/charts-angular/src/test.ts",
            "tsConfig": "projects/charts-angular/tsconfig.spec.json",
            "karmaConfig": "projects/charts-angular/karma.conf.js"
          }
        },
        "storybook": {
          "builder": "@storybook/angular:start-storybook",
          "options": {
            "configDir": "projects/charts-angular/.storybook",
            "tsConfig": "projects/charts-angular/.storybook/tsconfig.json",
            "browserTarget": "charts-angular:build",
            "compodoc": true,
            "compodocArgs": [
              "-e",
              "json",
              "-d",
              "projects/charts-angular"
            ],
            "port": 9006,
            "quiet": true
          }
        },
        "build-storybook": {
          "builder": "@storybook/angular:build-storybook",
          "options": {
            "configDir": "projects/charts-angular/.storybook",
            "tsConfig": "projects/charts-angular/.storybook/tsconfig.json",
            "browserTarget": "charts-angular:build",
            "compodoc": true,
            "compodocArgs": [
              "-e",
              "json",
              "-d",
              "projects/charts-angular"
            ],
            "outputDir": "demo/bundle",
            "quiet": true
          }
        }
      }
    }
  },
  "cli": {
    "analytics": false,
    "packageManager": "yarn"
  },
  "schematics": {
		"@schematics/angular:component": {
			"prefix": "ibm"
		},
		"@schematics/angular:directive": {
			"prefix": "ibm"
		}
	}
}