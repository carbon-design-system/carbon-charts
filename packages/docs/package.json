{
	"name": "@carbon/charts-docs",
	"private": true,
	"version": "1.13.33",
	"description": "Carbon Charts Documentation",
	"type": "module",
	"main": "src/testdata.ts",
  "types": "src/testdata.ts",
	"files": [
    "src/*"
  ],
	"scripts": {
		"dev": "vite",
		"pub:api": "typedoc --tsconfig ../core/tsconfig.json ../core/src/index.ts --out ../../pages/api",
		"pub:demo": "cp -a dist/. ../../pages/docs",
		"build:package": "vite build && yarn pub:api",
		"preview": "vite preview",
		"lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
		"format": "prettier . --write \"**/*.{scss,css,js,ts,tsx,cjs,mjs,md}\"  --ignore-path ../../.eslintignore",
		"clean": "rm -rf ../../pages/docs"
	},
	"dependencies": {
		"@carbon/charts": "workspace:*",
		"@carbon/charts-react": "workspace:*",
		"@carbon/icons-react": "^11.40.0",
		"@carbon/react": "^1.56.0",
		"highlight.js": "^11.9.0",
		"react": "^18.3.1",
		"react-dom": "^18.3.1",
		"react-router-dom": "^6.23.0"
	},
	"devDependencies": {
		"@types/react": "^18.3.1",
		"@types/react-dom": "^18.3.0",
		"@vitejs/plugin-react-swc": "^3.6.0",
		"eslint": "^9.1.1",
		"prettier": "^3.2.5",
		"sass": "^1.75.0",
		"typedoc": "^0.25.13",
		"typescript": "^5.4.5",
		"vite": "^5.2.10"
	},
	"publishConfig": {
		"access": "restricted"
	},
	"repository": {
		"type": "git",
		"url": "git@github.com:carbon-design-system/carbon-charts.git",
		"homepage": "https://charts.carbondesignsystem.com/react/"
	},
	"license": "Apache-2.0",
	"author": "IBM",
	"keywords": [
		"charts",
		"graphs",
		"radar",
		"gauge",
		"donut",
		"pie",
		"sparkline",
		"tree",
