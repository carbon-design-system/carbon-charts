{
	"name": "@carbon/charts-react",
	"version": "1.7.4",
	"description": "Carbon charting components for React",
	"main": "./dist/index.js",
	"module": "./dist/index.mjs",
	"exports": {
		"./package.json": "./package.json",
		".": {
			"types": "./dist/index.d.ts",
			"browser": {
				"import": "./dist/index.mjs",
				"require": "./dist/index.js"
			},
			"import": "./dist/index.mjs",
			"require": "./dist/index.js"
		},
		"./styles.min.css": "./dist/styles.min.css",
		"./styles.css": "./dist/styles.css"
	},
	"files": [
		"dist",
		"README.md",
		"LICENSE.md"
	],
	"scripts": {
		"cp:styles": "cp ../charts/dist/styles.* dist",
		"license": "cp ../../LICENSE.md ./",
		"build:package": "vite build && yarn cp:styles && yarn license",
		"build:demo": "NODE_OPTIONS=--max_old_space_size=9126 storybook build -o demo/bundle --quiet --disable-telemetry",
		"build": "yarn build:package && yarn build:demo",
		"storybook": "storybook dev -p 9006",
		"start": "yarn storybook",
		"ci-check": "yarn format:diff",
		"lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix --ignore-path ../../.gitignore",
		"format": "prettier . --write \"**/*.{scss,css,js,ts,tsx,md}\"  --ignore-path ../../.eslintignore",
		"format:diff": "prettier --list-different src/ --ignore-path ../../.gitignore",
		"clean": "rm -rf dist demo/bundle"
	},
	"dependencies": {
		"@carbon/charts": "workspace:*",
		"@carbon/icons-react": "^11.18.0",
		"@carbon/telemetry": "~0.1.0"
	},
	"peerDependencies": {
		"react": "^18.0.0",
		"react-dom": "^18.0.0"
	},
	"devDependencies": {
		"@rushstack/eslint-patch": "^1.2.0",
		"@stackblitz/sdk": "1.9.0",
		"@storybook/addon-essentials": "^7.0.7",
		"@storybook/addon-interactions": "^7.0.7",
		"@storybook/addon-links": "^7.0.7",
		"@storybook/blocks": "^7.0.7",
		"@storybook/manager-api": "^7.0.7",
		"@storybook/react": "^7.0.7",
		"@storybook/react-vite": "^7.0.7",
		"@storybook/testing-library": "^0.1.0",
		"@storybook/theming": "^7.0.7",
		"@types/carbon__icons-react": "^11.16.0",
		"@types/react": "^18.2.0",
		"@types/react-dom": "^18.2.1",
		"@typescript-eslint/eslint-plugin": "^5.59.1",
		"@typescript-eslint/parser": "^5.59.1",
		"@vitejs/plugin-react": "^4.0.0",
		"classnames": "^2.3.2",
		"codesandbox": "^2.2.3",
		"eslint": "^8.39.0",
		"eslint-config-prettier": "^8.8.0",
		"eslint-plugin-jest": "^27.2.1",
		"eslint-plugin-prettier": "^4.2.1",
		"prettier": "^2.8.8",
		"react": "^18.2.0",
		"react-dom": "^18.2.0",
		"sass": "^1.62.1",
		"storybook": "^7.0.7",
		"typescript": "^5.0.4",
		"vite": "^4.3.3",
		"vite-plugin-dts": "~2.3.0"
	},
	"prettier": "../../prettier.config.cjs",
	"publishConfig": {
		"directory": "dist",
		"access": "public"
	},
	"browserslist": [
		"> 1%",
		"not op_mini all"
	],
	"repository": {
		"type": "git",
		"url": "git@github.com:carbon-design-system/carbon-charts.git",
		"homepage": "https://carbon-design-system.github.io/carbon-charts/react/"
	},
	"bugs": {
		"url": "https://github.com/carbon-design-system/carbon-charts/issues"
	},
	"homepage": "https://github.com/carbon-design-system/carbon-charts#readme",
	"maintainers": [
		{
			"name": "Eliad Moosavi",
			"email": "iliadm@ca.ibm.com",
			"url": "https://github.com/theiliad"
		}
	],
	"contributors": [
		{
			"name": "Eliad Moosavi",
			"email": "iliadm@ca.ibm.com",
			"url": "https://github.com/theiliad"
		}
	],
	"license": "Apache-2.0",
	"author": "IBM",
	"keywords": [
		"carbon",
		"charts",
		"react",
		"dataviz",
		"data-visualization",
		"visualizations",
		"d3",
		"svg",
		"component",
		"components",
		"css",
		"html",
		"ibm",
		"typescript",
		"javascript",
		"js",
		"library",
		"pattern",
		"patterns",
		"sass",
		"scss"
	]
}
