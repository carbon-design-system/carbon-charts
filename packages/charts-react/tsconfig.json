{
	"extends": "../../tsconfig.json",
	"include": [
		"src/**/*",
		".storybook/*.ts",
		"stories/**/*",
		"../charts/stories/**/*" // for 1_gettingStarted.stories.tsx
	],
	"compilerOptions": {
		"baseUrl": ".",
		"types": ["vite/client"],
		"useDefineForClassFields": true,
		"allowJs": false,
		"checkJs": false,
		"esModuleInterop": false,
		"allowSyntheticDefaultImports": true,
		"strict": true,
		"isolatedModules": true,
		"noEmit": true,
		"jsx": "react-jsx"
	},
	"references": [
		{
			"path": "./tsconfig.node.json"
		}
	]
}
