{
	"name": "@carbon/charts-svelte",
	"version": "1.6.14",
	"description": "Carbon charting components for Svelte",
	"scripts": {
		"package": "svelte-kit sync && svelte-package && publint",
		"build:package": "vite build && yarn package",
		"copy:md": "cp CHANGELOG.md dist/ && cp ../../LICENSE.md dist/",
		"build:demo": "storybook build -o demo/bundle --quiet",
		"build": "yarn build:package && yarn copy:md && yarn build:demo",
		"storybook": "storybook dev -p 9006",
		"start": "yarn storybook",
		"clean": "rimraf dist demo/bundle",
		"test": "svelte-check --workspace=tests",
		"lint": "prettier --plugin-search-dir . --check . && eslint .",
		"format": "prettier --plugin-search-dir . --write .",
		"prepublishOnly": "yarn package",
		"preview": "vite preview",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json"
	},
	"type": "module",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"svelte": "./dist/index.js",
			"browser": {
				"import": "./dist/index.js"
			},
			"import": "./dist/index.js"
		}
	},
	"files": [
		"dist"
	],
	"peerDependencies": {
		"d3": "^7.0.0",
		"svelte": "^3.57.0"
	},
	"devDependencies": {
		"@carbon/charts": "workspace:^1.6.14",
		"@carbon/telemetry": "~0.1.0",
		"@storybook/addon-essentials": "^7.0.0-0",
		"@storybook/addons": "^7.0.0-0",
		"@storybook/blocks": "^7.0.0-0",
		"@storybook/svelte": "^7.0.0-0",
		"@storybook/sveltekit": "^7.0.0-0",
		"@storybook/testing-library": "^0.0.14-next.1",
		"@storybook/theming": "^7.0.0-rc.4",
		"@sveltejs/adapter-auto": "^2.0.0",
		"@sveltejs/kit": "^1.14.0",
		"@sveltejs/package": "^2.0.2",
		"@typescript-eslint/eslint-plugin": "^5.56.0",
		"@typescript-eslint/parser": "^5.56.0",
		"codesandbox": "^2.2.3",
		"d3": "^7.8.3",
		"eslint": "^8.36.0",
		"eslint-config-prettier": "^8.8.0",
		"eslint-plugin-storybook": "^0.6.11",
		"eslint-plugin-svelte3": "^4.0.0",
		"prettier": "^2.8.7",
		"prettier-plugin-svelte": "^2.10.0",
		"publint": "^0.1.11",
		"react": "^18.2.0",
		"react-dom": "^18.2.0",
		"storybook": "^7.0.0-0",
		"svelte": "^3.57.0",
		"svelte-check": "^3.1.4",
		"tslib": "^2.5.0",
		"typescript": "^5.0.2",
		"vite": "^4.2.1"
	},
	"publishConfig": {
		"directory": "dist",
		"access": "public"
	},
	"repository": {
		"type": "git",
		"url": "git@github.com:carbon-design-system/carbon-charts.git",
		"homepage": "https://carbon-design-system.github.io/carbon-charts/svelte/"
	},
	"bugs": {
		"url": "https://github.com/carbon-design-system/carbon-charts/issues"
