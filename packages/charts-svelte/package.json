{
	"name": "@carbon/charts-svelte",
	"version": "1.7.1",
	"description": "Carbon charting components for Svelte",
	"scripts": {
		"package": "svelte-kit sync && svelte-package && publint",
		"cp:styles": "cp ../charts/dist/styles.* dist",
		"build:package": "vite build && yarn package && yarn cp:styles",
		"license": "cp ../../LICENSE.md ./",
		"build:demo": "storybook build -o demo/bundle --quiet",
		"build": "yarn build:package && yarn license && yarn build:demo",
		"storybook": "storybook dev -p 9006",
		"start": "yarn storybook",
		"clean": "rm -rf dist demo/bundle",
		"test": "svelte-check --workspace=tests",
		"lint": "prettier --plugin-search-dir . --check . && eslint . --ignore-path ../../.gitignore",
		"format": "prettier --plugin-search-dir . --write .",
		"prepublishOnly": "yarn package",
		"preview": "vite preview",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json"
	},
	"type": "module",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"svelte": "./dist/index.js",
			"browser": {
				"import": "./dist/index.js"
			},
			"import": "./dist/index.js"
		},
		"./styles.min.css": "./dist/styles.min.css",
		"./styles.css": "./dist/styles.css"
	},
	"files": [
		"dist",
		"CHANGELOG.md",
		"LICENSE.md"
	],
	"peerDependencies": {
		"svelte": "^3.58.0"
	},
	"devDependencies": {
		"@carbon/charts": "workspace:*",
		"@carbon/telemetry": "~0.1.0",
		"@storybook/addon-essentials": "^7.0.7",
		"@storybook/addon-interactions": "^7.0.7",
		"@storybook/addon-links": "^7.0.7",
		"@storybook/blocks": "^7.0.7",
		"@storybook/manager-api": "^7.0.7",
		"@storybook/svelte": "^7.0.7",
		"@storybook/sveltekit": "^7.0.7",
		"@storybook/testing-library": "^0.1.0",
		"@storybook/theming": "^7.0.7",
		"@sveltejs/adapter-auto": "^2.0.1",
		"@sveltejs/kit": "^1.15.8",
		"@sveltejs/package": "^2.0.2",
		"@typescript-eslint/eslint-plugin": "^5.59.1",
		"@typescript-eslint/parser": "^5.59.1",
		"codesandbox": "^2.2.3",
		"eslint": "^8.39.0",
		"eslint-config-prettier": "^8.8.0",
		"eslint-plugin-storybook": "^0.6.11",
		"eslint-plugin-svelte3": "^4.0.0",
		"prettier": "^2.8.8",
		"prettier-plugin-svelte": "^2.10.0",
		"publint": "^0.1.11",
		"react": "^18.2.0",
		"react-dom": "^18.2.0",
		"storybook": "^7.0.7",
		"svelte": "^3.58.0",
		"svelte-check": "^3.2.0",
		"tslib": "^2.5.0",
		"typescript": "^5.0.4",
		"vite": "^4.3.1"
	},
	"browserslist": [
		"> 1%",
		"not op_mini all"
	],
	"publishConfig": {
		"directory": "dist",
		"access": "public"
	},
	"repository": {
		"type": "git",
		"url": "git@github.com:carbon-design-system/carbon-charts.git",
		"homepage": "https://carbon-design-system.github.io/carbon-charts/svelte/"
	},
	"bugs": {
		"url": "https://github.com/carbon-design-system/carbon-charts/issues"
	},
	"homepage": "https://github.com/carbon-design-system/carbon-charts#readme",
	"maintainers": [
		{
			"name": "Eric Liu",
			"url": "https://github.com/metonym"
		}
	],
	"contributors": [
		{
			"name": "Eric Liu",
			"url": "https://github.com/metonym"
		}
	],
	"license": "Apache-2.0",
	"author": "IBM",
	"keywords": [
		"carbon",
		"charts",
		"svelte",
		"dataviz",
		"data-visualization",
		"visualizations",
		"d3",
		"svg",
		"component",
		"components",
		"css",
		"html",
		"ibm",
		"typescript",
		"javascript",
		"js",
		"library",
		"pattern",
		"patterns",
		"sass",
		"scss"
	]
}
