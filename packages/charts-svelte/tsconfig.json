{
	"extends": "../../tsconfig.json",
	"compilerOptions": {
		// From ./.svelte-kit/tsconfig.json
		"paths": {
			"$lib": [
				"./src/lib"
			],
			"$lib/*": [
				"./src/lib/*"
			]
		},
		"rootDirs": [
			".",
			"./types"
		],
		"importsNotUsedAsValues": "error",
		"preserveValueImports": true,
		"lib": [
			"ESNext",
			"DOM",
			"DOM.Iterable"
		],
		// "moduleResolution": "node", // only uncomment if there are issues
		"ignoreDeprecations": "5.0",

    "useDefineForClassFields": true,
		"allowJs": true,
		"checkJs": true
	},
	"include": [
		".svelte-kit/ambient.d.ts",
		"types/**/$types.d.ts",
		"vite.config.ts",
		"src/**/*.svelte",
		"src/**/*.ts",
		"src/**/*.js",
		"tests/**/*.svelte",
		"tests/**/*.ts",
		"tests/**/*.js"
	],
	"exclude": [
		".svelte-kit/[!ambient.d.ts]**"
	],
	"references": [{ "path": "./tsconfig.vite.json" }]
}
