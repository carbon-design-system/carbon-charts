{
  "name": "@carbon/charts-vue",
  "version": "1.7.1",
  "description": "Carbon charting components for Vue",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "types": "./dist/index.d.ts",
      "browser": {
        "import": "./dist/index.mjs",
        "require": "./dist/index.js"
      },
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./styles.min.css": "./dist/styles.min.css",
    "./styles.css": "./dist/styles.css"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "copy:md": "cp CHANGELOG.md dist/ && cp ../../LICENSE.md dist/",
    "cp:styles": "cp ../charts/dist/styles.* dist",
    "build:package": "vite build && yarn copy:md && yarn cp:styles",
    "build:demo": "storybook build -o demo/bundle --quiet",
    "build": "yarn build:package && yarn build:demo",
    "type-check": "vue-tsc --noEmit",
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix --ignore-path .gitignore",
    "storybook": "storybook dev -p 9006",
    "start": "yarn storybook",
    "ci-check": "yarn format:diff",
    "format": "prettier --write src/",
    "format:diff": "prettier --list-different src/",
    "clean": "rm -rf dist demo/bundle"
  },
  "peerDependencies": {
    "vue": "^3.2.0"
  },
  "dependencies": {
    "@carbon/charts": "workspace:*",
    "@carbon/telemetry": "~0.1.0"
  },
  "devDependencies": {
    "@rushstack/eslint-patch": "^1.2.0",
    "@storybook/addon-essentials": "^7.0.6",
    "@storybook/addon-interactions": "^7.0.6",
    "@storybook/addon-links": "^7.0.6",
    "@storybook/blocks": "^7.0.6",
    "@storybook/manager-api": "^7.0.6",
    "@storybook/testing-library": "^0.1.0",
    "@storybook/theming": "^7.0.6",
    "@storybook/vue3": "^7.0.6",
    "@storybook/vue3-vite": "^7.0.6",
    "@types/node": "^18.15.13",
    "@vitejs/plugin-vue": "^4.1.0",
    "@vue/eslint-config-prettier": "^7.1.0",
    "@vue/eslint-config-typescript": "^11.0.2",
    "@vue/tsconfig": "^0.2.0",
    "codesandbox": "^2.2.3",
    "eslint": "^8.39.0",
    "eslint-plugin-storybook": "^0.6.11",
    "eslint-plugin-vue": "^9.11.0",
    "prettier": "^2.8.7",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "storybook": "^7.0.6",
    "typescript": "^5.0.4",
    "vite": "^4.3.1",
    "vite-plugin-dts": "~2.3.0",
    "vue": "^3.2.47"
  },
  "prettier": "../../prettier.config.mjs",
  "publishConfig": {
    "directory": "dist",
    "access": "public"
  },
  "browserslist": [
    "> 1%",
    "not op_mini all"
  ],
  "repository": {
    "type": "git",
    "url": "git@github.com:carbon-design-system/carbon-charts.git",
    "homepage": "https://carbon-design-system.github.io/carbon-charts/vue/"
  },
  "bugs": {
    "url": "https://github.com/carbon-design-system/carbon-charts/issues"
  },
  "homepage": "https://github.com/carbon-design-system/carbon-charts#readme",
  "maintainers": [
    {
      "name": "Eliad Moosavi",
      "email": "iliadm@ca.ibm.com",
      "url": "https://github.com/theiliad"
    }
  ],
  "contributors": [
    {
      "name": "Eliad Moosavi",
      "email": "iliadm@ca.ibm.com",
      "url": "https://github.com/theiliad"
    }
  ],
  "license": "Apache-2.0",
  "author": "IBM",
  "keywords": [
    "carbon",
    "charts",
    "vue",
    "dataviz",
    "data-visualization",
    "visualizations",
    "d3",
    "svg",
    "component",
    "components",
    "css",
    "html",
    "ibm",
    "typescript",
    "javascript",
    "js",
    "library",
    "pattern",
    "patterns",
    "sass",
    "scss"
  ]
}
