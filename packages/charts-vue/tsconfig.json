{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    /* Bundler mode */
    "allowImportingTsExtensions": true,
    "noEmit": true,
    "jsx": "preserve",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": ["src/**/*.vue", "src/**/*.ts", "src/**/*.d.ts"],
  "references": [{ "path": "./tsconfig.vite.json" }]
}
