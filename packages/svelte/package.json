{
	"name": "@carbon/charts-svelte",
	"version": "1.22.14",
	"description": "Carbon Charts component library for Svelte",
	"scripts": {
		"postinstall": "ibmtelemetry --config=telemetry.yml",
		"file:styles": "cp ../core/dist/styles.* dist",
		"build": "svelte-kit sync && svelte-package && yarn file:styles && publint",
		"build:test": "vite build --emptyOutDir",
		"dev": "vite --port 3003",
		"test": "svelte-check --workspace=tests",
		"test:dom": "playwright test",
		"test:dom:rebase": "playwright test --update-snapshots",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"lint": "prettier . --check --ignore-path ../../.prettierignore && eslint",
		"format": "prettier . --write --ignore-path ../../.prettierignore "
	},
	"type": "module",
	"types": "./dist/index.d.ts",
	"svelte": "./dist/index.js",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"svelte": "./dist/index.js"
		},
		"./styles.min.css": "./dist/styles.min.css",
		"./styles.css": "./dist/styles.css"
	},
	"styles": "./dist/styles.css",
	"files": [
		"dist",
		"CHANGELOG.md",
		"telemetry.yml"
	],
	"peerDependencies": {
		"svelte": "^4.0.0 || ^5.17.0"
	},
	"dependencies": {
		"@carbon/charts": "workspace:*",
		"@ibm/telemetry-js": "^1.8.0"
	},
	"devDependencies": {
		"@playwright/test": "^1.49.1",
		"@sveltejs/adapter-static": "^3.0.8",
		"@sveltejs/kit": "^2.15.2",
		"@sveltejs/package": "^2.3.7",
		"@sveltejs/vite-plugin-svelte": "^5.0.3",
		"eslint": "^9.18.0",
		"prettier": "^3.4.2",
		"publint": "^0.3.2",
		"svelte": "^5.17.5",
		"svelte-check": "^4.1.4",
		"tslib": "^2.8.1",
		"typescript": "^5.7.3",
		"vite": "^6.0.7"
	},
	"publishConfig": {
		"access": "public"
	},
	"homepage": "https://github.com/carbon-design-system/carbon-charts#readme",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/carbon-design-system/carbon-charts.git",
		"directory": "packages/svelte"
	},
	"bugs": {
		"url": "https://github.com/carbon-design-system/carbon-charts/issues"
	},
	"maintainers": [
		{
			"name": "Eric Liu",
			"url": "https://github.com/metonym"
		}
	],
	"contributors": [
		{
			"name": "Eric Liu",
			"url": "https://github.com/metonym"
		}
	],
	"license": "Apache-2.0",
	"author": "IBM",
	"keywords": [
		"charts",
		"graphs",
		"radar",
		"gauge",
		"donut",
		"pie",
		"sparkline",
		"tree",
		"treemap",
		"heatmap",
		"wordcloud",
		"histogram",
		"alluvial",
		"geo",
		"bar",
		"bullet",
		"scatter",
		"meter",
		"line",
		"svelte",
		"sveltekit",
		"component",
		"carbon",
		"ibm",
		"svg",
		"data",
		"typescript"
	],
	"gitHead": "f7037103474e53901678dd9e62095b0b1f0f62c4"
}
