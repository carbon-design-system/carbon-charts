{
	"extends": "./.svelte-kit/tsconfig.json",
	"compilerOptions": {
		"allowJs": true,
		"checkJs": true,
		// "esModuleInterop": true, // should not be needed as core has this enabled and it uses CJS modules directly
		"forceConsistentCasingInFileNames": true,
		"outDir": "dist", // not build
		"skipLibCheck": true,
		"sourceMap": true,
		"strict": true,
		"noImplicitAny": false, // for src/routes/+page.svelte:14
		"module": "ESNext",
		"moduleResolution": "Bundler",
		"allowImportingTsExtensions": true
	}
}
