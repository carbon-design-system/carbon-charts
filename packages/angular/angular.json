{
	"$schema": "../../node_modules/@angular/cli/lib/config/schema.json",
	"version": 1,
	"newProjectRoot": "./",
	"projects": {
		"charts-angular": {
			"projectType": "library",
			"root": ".",
			"sourceRoot": "src",
			"schematics": {},
			"prefix": "ibm",
			"architect": {
				"build": {
					"builder": "@angular-devkit/build-angular:ng-packagr",
					"options": {
						"project": "ng-package.json"
					},
					"configurations": {
						"production": {
							"tsConfig": "tsconfig.lib.prod.json"
						},
						"development": {
							"tsConfig": "tsconfig.lib.json"
						}
					},
					"defaultConfiguration": "production"
				},
				"test": {
					"builder": "@angular-devkit/build-angular:karma",
					"options": {
						"main": "src/test.ts",
						"tsConfig": "tsconfig.spec.json",
						"polyfills": ["zone.js", "zone.js/testing"]
					}
				},
				"lint": {
					"builder": "@angular-eslint/builder:lint",
					"options": {
						"lintFilePatterns": ["src/**/*.ts", "src/**/*.html"],
						"eslintConfig": "./eslint.config.js"
					}
				}
			}
		},
		"charts-angular-test": {
			"projectType": "application",
			"schematics": {
				"@schematics/angular:component": {
					"style": "scss"
				}
			},
			"root": "charts-angular-test",
			"sourceRoot": "charts-angular-test/src",
			"prefix": "app",
			"architect": {
				"build": {
					"builder": "@angular-devkit/build-angular:browser-esbuild",
					"options": {
						"aot": true,
						"outputPath": "../../pages",
						"index": "charts-angular-test/src/index.html",
						"main": "charts-angular-test/src/main.ts",
						"polyfills": ["zone.js"],
						"tsConfig": "charts-angular-test/tsconfig.app.json",
						"inlineStyleLanguage": "scss",
						"assets": ["charts-angular-test/src/favicon.ico", "charts-angular-test/src/assets"],
						"styles": ["charts-angular-test/src/styles.scss"],
						"scripts": []
					},
					"configurations": {
						"production": {
							"budgets": [
								{
									"type": "initial",
									"maximumWarning": "500kb",
									"maximumError": "1mb"
								},
								{
									"type": "anyComponentStyle",
									"maximumWarning": "2kb",
									"maximumError": "4kb"
								}
							],
							"outputHashing": "all"
						},
						"development": {
							"buildOptimizer": true,
							"optimization": false,
							"extractLicenses": false,
							"sourceMap": true
						}
					},
					"defaultConfiguration": "production"
				},
				"serve": {
					"builder": "@angular-devkit/build-angular:dev-server",
					"configurations": {
						"production": {
							"browserTarget": "charts-angular-test:build:production"
						},
						"development": {
							"browserTarget": "charts-angular-test:build:development"
						}
					},
					"defaultConfiguration": "development"
				},
				"extract-i18n": {
					"builder": "@angular-devkit/build-angular:extract-i18n",
					"options": {
						"browserTarget": "charts-angular-test:build"
					}
				},
				"test": {
					"builder": "@angular-devkit/build-angular:karma",
					"options": {
						"polyfills": ["zone.js", "zone.js/testing"],
						"tsConfig": "charts-angular-test/tsconfig.spec.json",
						"inlineStyleLanguage": "scss",
						"assets": ["charts-angular-test/src/favicon.ico", "charts-angular-test/src/assets"],
						"styles": ["charts-angular-test/src/styles.scss"],
						"scripts": []
					}
				},
				"lint": {
					"builder": "@angular-eslint/builder:lint",
					"options": {
						"lintFilePatterns": ["charts-angular-test/**/*.ts", "charts-angular-test/**/*.html"],
						"eslintConfig": "projects/charts-angular-test/eslint.config.js"
					}
				}
			}
		}
	},
	"cli": {
		"analytics": false,
		"packageManager": "yarn",
		"schematicCollections": ["@angular-eslint/schematics"]
	}
}
