{
	"name": "@carbon/charts-monorepo",
	"private": true,
	"scripts": {
		"clean:root": "rm -rf node_modules yarn.lock .yarn/cache .yarn/install-state.gz",
		"clean": "lerna clean && lerna run clean && yarn clean:root",
		"commit": "git-cz",
		"format": "lerna run format",
		"test": "lerna run test",
		"lint": "lerna run lint",
		"build:packages": "lerna run --stream build:package",
		"build:demos": "bash scripts/build-demos.sh",
		"build": "bash scripts/build-packages-and-demos.sh",
		"deploy": "bash scripts/deploy.sh",
		"postinstall": "husky install",
		"prepack": "pinst --disable",
		"postpack": "pinst --enable"
	},
	"workspaces": [
		"packages/*"
	],
	"release": {
		"branch": "master"
	},
	"engines": {
		"node": "^18.16.0",
		"yarn": "^3.5.0"
	},
	"packageManager": "yarn@3.5.0",
	"devDependencies": {
		"commitizen": "^4.3.0",
		"cz-conventional-changelog": "^3.3.0",
		"husky": "^8.0.3",
		"lerna": "~6.6.1",
		"pinst": "^3.0.0",
		"prettier": "^2.8.8",
		"prettier-config-carbon": "~0.9.0",
		"typescript": "^5.0.4"
	},
	"resolutions": {
		"axios": "0.21.1"
	},
	"prettier": "./prettier.config.mjs",
	"config": {
		"commitizen": {
			"path": "cz-conventional-changelog"
		}
	},
	"description": "Carbon charting components, lerna monorepo",
	"repository": {
		"type": "git",
		"url": "git@github.com:carbon-design-system/carbon-charts.git"
	},
	"keywords": [
		"charts"
	],
	"author": "IBM",
	"license": "Apache-2.0",
	"maintainers": [
		{
			"name": "Eliad Moosavi",
			"email": "iliadm@ca.ibm.com"
		}
	]
}
