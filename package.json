{
	"name": "@carbon/charts-monorepo",
	"private": true,
	"description": "Carbon charting components, lerna monorepo",
	"repository": {
		"type": "git",
		"url": "git@github.com:carbon-design-system/carbon-charts.git"
	},
	"keywords": [
		"charts"
	],
	"author": "IBM",
	"license": "Apache-2.0",
	"scripts": {
		"clean": "lerna clean && lerna run clean && rimraf node_modules",
		"commit": "git-cz",
		"format": "lerna run format",
		"test": "lerna run test",
		"lint": "lerna run lint",
		"build:packages": "lerna run --stream build:package",
		"build:demos": "bash scripts/build-demos.sh",
		"build": "bash scripts/build-packages-and-demos.sh",
		"deploy": "bash scripts/deploy.sh"
	},
	"workspaces": {
		"packages": [
			"packages/*"
		]
	},
	"husky": {
		"hooks": {
			"pre-commit": "bash scripts/precommit.sh"
		}
	},
	"release": {
		"branch": "master"
	},
	"engines": {
		"node": "^18.15.0",
		"yarn": "^3.5.0"
	},
	"devDependencies": {
		"commitizen": "^4.3.0",
		"cz-conventional-changelog": "^3.3.0",
		"husky": "^8.0.3",
		"lerna": "~6.5.1",
		"prettier": "^2.8.4",
		"prettier-config-carbon": "~0.9.0",
		"rimraf": "^4.4.1"
	},
	"resolutions": {
		"axios": "0.21.1"
	},
	"prettier": "./prettier.config.mjs",
	"config": {
		"commitizen": {
			"path": "cz-conventional-changelog"
		}
	},
	"maintainers": [
		{
			"name": "Eliad Moosavi",
			"email": "iliadm@ca.ibm.com"
		}
	],
	"packageManager": "yarn@3.5.0"
}
