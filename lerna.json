{
  "$schema": "node_modules/lerna/schemas/lerna-schema.json",
  "name": "root",
  "packages": [
    "packages/*"
  ],
  "npmClient": "yarn",
  "useWorkspaces": true,
  "command": {
    "publish": {
      "ignoreChanges": [
        "packages/*/demo",
        "**/*.md"
      ]
    },
    "bootstrap": {
      "npmClientArgs": [
        "--prefer-offline"
      ]
    }
  },
  "version": "1.6.14"
}
