{
  "version": "1.7.1",
  "$schema": "node_modules/lerna/schemas/lerna-schema.json",
  "name": "root",
  "packages": [
    "packages/*"
  ],
  "npmClient": "yarn",
  "useWorkspaces": true,
  "command": {
    "publish": {
      "ignoreChanges": [
        "packages/*/demo/bundle",
        "**/*.md"
      ]
    },
    "bootstrap": {
      "npmClientArgs": [
        "--cached"
      ]
    }
  },
  "commandVersion": "6.6.1"
}
