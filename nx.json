{
  "tasksRunnerOptions": {
    "default": {
      "runner": "nx/tasks-runners/default",
      "options": {
        "cacheableOperations": [
          "file:license",
          "file:md",
          "file:styles",
          "file:scss:charts",
          "file:css:charts",
          "file:css:min:charts",
          "file:css:demo",
          "postbundle",
          "build:package",

          "demo:docs",
          "demo:mdx",
          "build:demo",

          "build"
        ]
      }
    }
  },
  "targetDefaults": {

    "build:package": {
      "dependsOn": [
        "^build:package"
      ],
      "outputs": [
        "{projectRoot}/dist"
      ]
    },

    "build:demo": {
      "dependsOn": [
        "^build:demo"
      ],
      "outputs": [
        "{projectRoot}/demo/bundle"
      ]
    },
 
    "build:docs": {
      "outputs": [
        "{projectRoot}/demo/bundle/documentation"
      ]
    }
  }
}
