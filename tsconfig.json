{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Monorepo",
  "compilerOptions": {
    "composite": true,
    "baseUrl": ".",
    // Only valid of baseUrl is redefined in each package's tsconfig.json as "."
    // compilerOptions.paths do not get translated like include and exclude
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
    "strict": false,
    "resolveJsonModule": true,
    "allowJs": true,
    "checkJs": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "declaration": true,
    "sourceMap": true,
    "importsNotUsedAsValues": "error",
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "lib": [
      "ESNext",
      "DOM",
      "DOM.Iterable"
    ],
    "target": "ESNext",
    "module": "ESNext"
  },
  "exclude": [
    "node_modules",
    "packages/*/node_modules"
  ]
}
