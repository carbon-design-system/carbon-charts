{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Monorepo",
  "compilerOptions": {
    "composite": true,
    "outDir": "./dist",
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "./src/*"
      ]
    },
    "isolatedModules": true, // recommended by vite
    "strict": false,
    "resolveJsonModule": true,
    "allowJs": true,
    "checkJs": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "declaration": true,
    "sourceMap": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "target": "ES2021",
    "module": "ESNext",
    "lib": [
      "ESNext",
      "DOM",
      "DOM.Iterable"
    ]
  },
  "exclude": [
    ".yarn",
    "pages",
    "**/.angular",
    "**/.sveltekit",
    "**/node_modules",
    "**/demo/bundle",
    "**/dist"
  ]
}
