{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    // Common across frameworks for vite
    "skipLibCheck": true,
    "target": "ESNext",
    "module": "ESNext",
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "resolveJsonModule": true,
    "isolatedModules": true,
    "moduleResolution": "bundler", // Svelte wants node but...

    // Sensible globals
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true
  },
  "exclude": [
    // Directories
    ".husky",
    ".yarn",
    "pages",
    ".angular",
    ".svelte-kit",
    "node_modules",
    "demo/bundle",
    "dist",
    "**/assets",
    // Storybook
    "**/*.stories.@(ts|tsx)",
    "**/*.mdx",
    // Tests
    "**/*.test.tsx",
    "**/tests/*",
    "**/*.spec.ts"
  ]
}
