// IDE picks this up by default
{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    // Common across frameworks for vite
    "skipLibCheck": true,
    "target": "ESNext", // Vue overrides to ES2020
    "module": "ESNext",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "moduleResolution": "bundler", // Svelte wants node but...

    // Sensible globals
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "sourceMap": true,

    // Resolve @carbon/charts in IDE without a build
    "baseUrl": "./packages",
    "paths": {
      "@carbon/charts": ["charts/src"]
    }
  },
  "exclude": [
    // Directories
    ".husky",
    ".yarn",
    "pages",
    ".angular",
    ".svelte-kit",
    "node_modules",
    "demo/bundle",
    "dist",
    "**/assets",
    // Storybook
    "**/*.stories.@(ts|tsx)",
    "**/*.mdx",
    // Tests
    "**/*.test.tsx",
    "**/tests/*",
    "**/*.spec.ts"
  ]
}
